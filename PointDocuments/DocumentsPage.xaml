<Page x:Class="PointDocuments.DocumentsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointDocuments"
        mc:Ignorable="d"
         d:DesignHeight="430"  d:DesignWidth="780" Title="Documents">
    <StackPanel Background="White">
        <Button Content="➕ Добавить новый документ" HorizontalAlignment="Left" Width="Auto" Padding="5,2,5,2"  Margin="0,0,0,10" Click="Button_Click"/>
        <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="DocumentsPanel"  CanVerticallyScroll="True">
            
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</Page>
